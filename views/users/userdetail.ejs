<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1> <%= title %> </h1>
    Name: <%= user.name %> <p>
    Email: <%= user.email %> <p>
    Password: <%= user.password %> <p>
    Image: <img src="<%= user.img %>" width="100" height="100" alt=""><P>
      <a href="/users/userUpdate/<%= user._id %>"><button type="button" name="button"> Update </button> </a>
      <button type="button" name="button" onclick="del();">Delete</button>
  </body>
  <script type="text/javascript">
    function del(){
      var co = confirm('Are u sure?');
      if(co){
        location.href = "/users/userDelete/<%= user._id %>";
      }
    }
  </script>
</html>
